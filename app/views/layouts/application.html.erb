

<!DOCTYPE HTML>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Code Armory</title>

  <%= stylesheet_link_tag "bootstrap", :media => "all" %>
  <%= stylesheet_link_tag "bootstrap-responsive", :media => "all" %>
  <%= stylesheet_link_tag "armory", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top navbar-inverse">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a href="/" class="brand">Code Armory</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li><a href="#">Explore</a></li>
            <li><a href="#">Arsenal</a></li>
            <% if current_user %>
              <li><%= link_to t("codearmory.sign_out", :default => "Sign Out"), destroy_user_session_path, :method => :delete%></li>
            <% else %>
              <li><a href="/auth/github">Sign In</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div id="main" class="container">
    <%= yield %>
  </div>

  <footer class="footer">
    <div class="container">&copy; 2012 Arms Dealer</div>
  </footer>
</body>
<%= javascript_include_tag "jquery.min.js" %>
<%= javascript_include_tag "bootstrap-collapse.js" %>
<%= yield(:javascripts) %>
</html>
